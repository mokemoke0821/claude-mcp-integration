{
  "name": "enhanced-development-commander",
  "version": "1.0.0",
  "description": "High-Performance Development Assistant MCP Server",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx src/index.ts",
    "start": "node build/index.js",
    "test": "node scripts/test-tools.js",
    "test:single": "node scripts/test-single-tool.js",
    "setup": "npm install && npm run build",
    "update-config": "node scripts/update-claude-config.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "dotenv": "^16.4.0",
    "chalk": "^5.3.0",
    "simple-git": "^3.19.0",
    "yaml": "^2.3.0",
    "glob": "^10.3.0",
    "fast-glob": "^3.3.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0"
  },
  "keywords": ["mcp", "development", "git", "analysis", "templates"],
  "author": "",
  "license": "MIT"
}